@model DoceriaGestao.ViewModels.InsumoViewModel

@{
    ViewData["Title"] = "Cadastro Produtos";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">Cadastrar Novo Produto</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="NomeDoProduto" class="form-label">Nome do Produto:</label>
                    <input asp-for="NomeDoProduto" class="form-control" placeholder="Ex: Chocolate em Pó ou Refrigerante" />
                    <span asp-validation-for="NomeDoProduto" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="Quantidade" class="form-label">Quantidade em Estoque:</label>
                        <input asp-for="Quantidade" class="form-control" type="number" placeholder="Ex: 12" />
                        <span asp-validation-for="Quantidade" class="text-danger"></span>
                    </div>

                  

                    <div class="col-md-4 mb-3">
                        <label asp-for="UnidadeMedida" class="form-label">Unidade:</label>
                        <select asp-for="UnidadeMedida" class="form-select"
                                asp-items="Html.GetEnumSelectList<DoceriaGestao.Models.UnidadeMedida>()">
                            <option value="">Selecione...</option>
                        </select>
                        <span asp-validation-for="UnidadeMedida" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="PrecoCompra" class="form-label">Preço Total da Compra:</label>
                        <div class="input-group">
                            <span class="input-group-text">R$</span>
                            <input asp-for="PrecoCompra" class="form-control" type="number" step="0.01" />
                        </div>
                        <span asp-validation-for="PrecoCompra" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-success">Salvar produto</button>
                    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}