@model DoceriaGestao.ViewModels.InsumoViewModel

@{
    ViewData["Title"] = "Editar Produtos";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">Editar Produtos</h3>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <input type="hidden" asp-for="Id" />

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="mb-3">
                    <label asp-for="NomeDoProduto" class="form-label">Nome do Produto</label>
                    <input asp-for="NomeDoProduto" class="form-control" placeholder="Ex: Chocolate em Pó ou Refrigerante" />
                    <span asp-validation-for="NomeDoProduto" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label asp-for="QuantidadeItens" class="form-label">Qtd. de Itens</label>
                        <input asp-for="QuantidadeItens" class="form-control" type="number" placeholder="Ex: 12" />
                        <span asp-validation-for="QuantidadeItens" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="ValorMedida" class="form-label">Peso/Volume Unitário</label>
                        <input asp-for="ValorMedida" class="form-control" type="number" step="0.01" placeholder="Ex: 2.0 ou 500" />
                        <span asp-validation-for="ValorMedida" class="text-danger"></span>
                    </div>

                    <div class="col-md-4 mb-3">
                        <label asp-for="UnidadeMedida" class="form-label">Unidade</label>
                        <select asp-for="UnidadeMedida" class="form-select"
                                asp-items="Html.GetEnumSelectList<DoceriaGestao.Models.UnidadeMedida>()">
                            <option value="">Selecione...</option>
                        </select>
                        <span asp-validation-for="UnidadeMedida" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="PrecoCompra" class="form-label">Preço Total da Compra</label>
                        <div class="input-group">
                            <span class="input-group-text">R$</span>
                            <input asp-for="PrecoCompra" class="form-control" type="number" step="0.01" />
                        </div>
                        <span asp-validation-for="PrecoCompra" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-success">Atualizar</button>
                    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
                </div>
            </form>
           
            
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}