@model DoceriaGestao.Models.Receita

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <h3 class="card-title mb-0">Nova Receita (Ficha Técnica)</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create">
                <div class="row">
                    <div class="col-md-8 mb-3">
                        <label class="form-label">Nome da Receita</label>
                        <input asp-for="NomeReceita" class="form-control" placeholder="Ex: Brownie de Chocolate" />
                    </div>
                    <div class="col-md-4 mb-3">
                        <label class="form-label">Rendimento (Fatias/Unid)</label>
                        <input asp-for="Rendimento" class="form-control" type="number" />
                    </div>
                </div>

                <hr />
                <h5>Adicionar Ingrediente Inicial</h5>
                <div class="row bg-light p-3 rounded">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Ingrediente</label>
                        <select name="InsumoId" class="form-select" asp-items="ViewBag.InsumoId">
                            <option value="">-- Selecione um Insumo --</option>
                        </select>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Quantidade (Opção A: ex 0,200 para 200g)</label>
                        <input name="QuantidadeUtilizada" type="number" step="0.001" class="form-control" />
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-primary">Salvar Receita</button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancelar</a>
                </div>
            </form>
        </div>
    </div>
</div>