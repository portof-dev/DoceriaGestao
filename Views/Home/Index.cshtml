@{
    ViewData["Title"] = "Home - Sonia's Bakers";
}

<style>
    .hero-section {
        background: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0 , 0.6)),
        /* Coloquei uma imagem de confeitaria profissional aqui */
        url("https://images.unsplash.com/photo-1551024601-bec78aea704b?q=80&w=1964&auto=format&fit=crop");
        background-size: cover;
        background-position: center;
        color: antiquewhite;
        padding: 100px 0;
        border-radius: 15px;
        margin-bottom: 30px;
        text-align: center;
    }

    .card-menu {
        transition: transform 0.3s;
        cursor: pointer;
        text-decoration: none;
        color: inherit;
    }

    .card-menu:hover {
        transform: scale(1.05);
        color: inherit;
    }
</style>

<div class="container">
    <header class="hero-section shadow">
        <h1 class="display-3 fw-bold">SoniaBakers</h1>
        <p class="lead">Gestão de Produção e Custos</p>
    </header>

    <div class="row text-center mt-5">
        
        <div class="col-md-4 mb-4">
            <a asp-controller="Insumos" asp-action="Index" class="card h-100 shadow card-menu">
                <div class="card-body py-5">
                    <i class="bi bi-box-seam display-4 text-primary"></i>
                    <h3 class="card-title mt-3">Insumos</h3>
                    <p class="card-text text-muted">Gerencie ingredientes, preços e estoque de materiais.</p>
                </div>
            </a>
        </div>

        <div class="col-md-4 mb-4">
            <a asp-controller="Receitas" asp-action="Index" class="card h-100 shadow card-menu">
                <div class="card-body py-5">
                    <i class="bi bi-journal-text display-4 text-success"></i>
                    <h3 class="card-title mt-3">Receitas</h3>
                    <p class="card-text text-muted">Crie fichas técnicas e calcule seu lucro real.</p>
                </div>
            </a>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow text-muted" style="opacity: 0.7;">
                <div class="card-body py-5">
                    <i class="bi bi-graph-up-arrow display-4"></i>
                    <h3 class="card-title mt-3">Relatórios</h3>
                    <p class="card-text">Em breve: Lucratividade e vendas.</p>
                </div>
            </div>
        </div>

    </div> </div> ```



